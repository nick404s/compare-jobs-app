<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JobCompare6300"
        tools:targetApi="31">
        <activity
            android:name=".JobComparisonTableActivity"
            android:exported="false" />
        <activity
            android:name=".ViewJobOfferListActivity"
            android:exported="false"
            android:label="@string/view_job_offers_title" />
        <activity
            android:name=".ComparisonSettingsActivity"
            android:exported="false"
            android:label="@string/comparison_settings_title" />
        <activity
            android:name=".AddCurrentJobActivity"
            android:exported="false"
            android:label="@string/current_job_title" />
        <activity
            android:name=".AddJobOfferActivity"
            android:exported="false"
            android:label="@string/add_job_offer_title" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>